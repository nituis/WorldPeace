<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/wargame"

    tools:context="android.comps413f.worldpeace.StartPage">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="World Peace"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:textSize="45dp"
        android:textStyle="bold"
        android:textColor="#FF5722"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" /><![CDATA[

    />



    ]]>

    <Button
        android:id="@+id/buttonNewGame"

        android:text="Start Game"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        android:layout_width="184dp"
        android:layout_height="53dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_marginTop="97dp"
        android:layout_below="@+id/textView"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Set Name"
        android:id="@+id/reviseName"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        android:layout_width="184dp"
        android:layout_height="53dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/buttonNewGame"
        android:layout_alignLeft="@+id/buttonNewGame"
        android:layout_alignStart="@+id/buttonNewGame" />


</RelativeLayout>
